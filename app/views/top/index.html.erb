
<div class="posts-wrapper container">
    <!--コンテナ-->
    
    <div class="side1 col-sm-3  bg-primary hidden-xs">side1</div>
    <div class="main col-sm-6 col-xs-6 bg-info">main</div>
    <div class="side2 col-sm-3 col-xs-6 bg-success">side2</div>
    
    <div class="logo text-center">
        <img src="assets/main.jpg">
    </div>

    <div class="posts-container col-sm-offset-2 col-sm-8" style="padding-top:50px;">
        
        <!--投稿一覧のパネル-->
        <div class="panel panel-warning">
            <!--パネルヘッダー-->
            <div class="panel-heading">
                <p class="text-center">投稿一覧</p>
            </div>
            <!--パネルコンテンツ-->
            <div class="panel-body">
                <div class="post-contents">
                    <%= render partial: "post",collection: @posts %>
                </div>
                
                <div class="text-center">
                    <%= paginate @posts %>
                </div>
            </div>
        </div>
        
</div>

