<%= form_for @post do |f| %>
    <p>変更前の投稿:<%= @post.text %></p>
    <%= f.text_area :text, placeholder: "入力してください",value: @post.text,maxlength: 400,size:"40x10", class:"text-content"%>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.submit "編集", class:"btn-submit" %>
<% end %>