
<div class="user-post-content">
    <!--ユーザーのイメージ画像-->
    <% if post.user.image.attached? %>
        <img src= "<%= rails_blob_path(post.user.image) %>",width="40", height= "40">
    <% else %>
        <img src= "assets/1.png",width="40", height= "40">
    <% end %>
    <%= link_to "#{post.user.nickname} さん", user_path(post.user) %>
    <p><%= post.text %></p>
    <p><%= post.created_at.strftime("%Y-%m-%d %H:%M") %></p>
    <% if current_user.id == post.user.id %>
        <div class="btn-group">
            <!--編集ボタン-->
            <%= link_to edit_post_path(post)do %>
                <button class="btn btn-success"><i class="glyphicon glyphicon-wrench" style="padding-right:5px;"></i>編集</button>
            <% end %>
            <!--削除ボタン-->
            <%= link_to "/posts/#{post.id}", method: :delete do %>
                <button class="btn btn-danger"><i class="glyphicon glyphicon-trash" style="padding-right:5px;"></i>削除</button>
            <% end %>
        </div>
        
    <% end %>
</div>

